<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center;">Editar <%= acampamento.nome %></h1>
        <div style = "width: 30%; margin: 25px auto;">
            <form action = "/acampamentos/<%= acampamento._id %>?_method=put" method = "post">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "acampamento[nome]" value = "<%= acampamento.nome %>">
                </div>
                
                <div class = "form-group">
                    <input class = "form-control" type = "number" name = "acampamento[preco]" value = "<%= acampamento.preco %>" min = "0.01" step = "0.01">
                </div>
                
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "acampamento[imagem]" value = "<%= acampamento.imagem %>">
                </div>
                
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "acampamento[descricao]" value = "<%= acampamento.descricao %>">
                </div>
                
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Enviar</button>
                </div>
            </form>
            <a href = "/acampamentos/<%= acampamento._id %>">Voltar</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>